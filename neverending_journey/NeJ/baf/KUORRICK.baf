END

IF
	HaveSpell(WIZARD_PROTECTION_FROM_THE_ELEMENTS)
	GlobalLT("LOCAL_CAST_SPELL","LOCALS",1)
	See(NearestEnemyOf(Myself))
THEN
	RESPONSE #100
		ForceSpell(LastSeenBy(Myself),WIZARD_PROTECTION_FROM_THE_ELEMENTS)
		RemoveSpell(WIZARD_PROTECTION_FROM_THE_ELEMENTS)
		Wait(2)
END

