IF
	Die()
THEN
	RESPONSE #100
END

IF
	Global("LKingDead","GLOBAL",0)
THEN
	RESPONSE #50
		DisplayStringHead(Myself,~We might as well just lie down and die.~) // "We might as well just lie down and die."
		Wait(3)
	RESPONSE #50
		DisplayStringHead(Myself,~No one's going to save us..~) // "No one's going to save us.."
		Wait(3)
END


