IF
	OnCreation()
	Global("VP_Reveal_Area","MYAREA",0)
THEN
	RESPONSE #100
		SetGlobal("VP_Reveal_Area","MYAREA",1)
		TriggerActivation("Tr0025",FALSE)
		TriggerActivation("Tr0035",FALSE)
		TriggerActivation("Tr0045",FALSE)
		TriggerActivation("Tr0055",FALSE)
		Explore()
END

IF
	Global("VP_SwitchTrigger1","MYAREA",0)
	Global("VP_LvQuest_Botched","GLOBAL",0)
	OR(3)
		Global("VP_Lavallins_Plot","GLOBAL",1)
		Global("VP_Lavallins_Plot","GLOBAL",6)
		Global("VP_Lavallins_Plot","GLOBAL",9)
	OR(2)
		PartyHasItem("DELETTER") // Letter
		PartyHasItem("VPAMULET") // Damon‘s Original Amulet of Power
