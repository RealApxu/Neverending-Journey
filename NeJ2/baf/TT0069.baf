	RESPONSE #100
		SetGlobal("VP_SwitchTrigger1","MYAREA",1)
		TriggerActivation("Tr0025",FALSE)
		TriggerActivation("Tr0035",FALSE)
		TriggerActivation("Tr0045",FALSE)
		TriggerActivation("Tr0055",TRUE)
		TriggerActivation("Tr0065",FALSE)
END

