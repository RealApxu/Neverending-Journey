	RealGlobalTimerExpired("VP_Xan_Tests","GLOBAL")
	Exists("Xan")
	Exists("TuEnch")
THEN
	RESPONSE #100
		ActionOverride("Xan",EscapeArea())
		ActionOverride("TuEnch",EscapeArea())
END

