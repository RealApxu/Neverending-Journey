		Continue()
END

IF
	GlobalTimerExpired("VP_Xan_Waiting","GLOBAL")
	Exists("Xan")
	Exists("TuEnch")
THEN
	RESPONSE #100
		ActionOverride("Xan",DestroySelf())
		ActionOverride("TuEnch",DestroySelf())
END

