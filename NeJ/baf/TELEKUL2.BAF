	Clicked([ANYONE])
	Range(LastTrigger,12)
	Global("VP_StartIWD2","GLOBAL",0)
	Global("VP_TeleportDialog","GLOBAL",1)
	Global("PlanarPrison","GLOBAL",2)
THEN
	RESPONSE #100
