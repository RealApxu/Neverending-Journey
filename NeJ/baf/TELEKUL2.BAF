	Clicked([ANYONE])
	Range(LastTrigger,9)
	Global("VP_StartIWD2","GLOBAL",0)
	Global("VP_TeleportDialog","GLOBAL",0)
	Global("PlanarPrison","GLOBAL",2)
THEN
	RESPONSE #100
		ActionOverride(Player1,DisplayStringHead(Myself,61938)) // This shimmering portal reveals a twisted landscape obscured by large, shadow-like forms.
		SetGlobal("VP_TeleportDialog","GLOBAL",1)
END

