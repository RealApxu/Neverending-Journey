IF
	!Allegiance(Myself,ENEMY)
	PickPocketFailed([PC])
	Global("VP_Enough_IsEnough","LOCALS",1)
THEN
	RESPONSE #100
		SetGlobal("VP_Enough_IsEnough","LOCALS",2)
		SetGlobal("VP_PickPockFailed","MYAREA",1)
		Enemy()
		Continue()
END

IF
	!Allegiance(Myself,ENEMY)
	PickPocketFailed([PC])
	Global("VP_Enough_IsEnough","LOCALS",0)
	RandomNum(9,1)
THEN
	RESPONSE #100
		DisplayStringHead(Myself,~I wouldn't try that again. Thieves are not welcome in these parts.~)
		SetGlobal("VP_Enough_IsEnough","LOCALS",1)
		Continue()
END

